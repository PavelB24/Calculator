<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ResultViewStile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/result_view_text_size</item>
    </style>

    <style name="ButtonStile">
        <item name="android:layout_marginEnd">@dimen/button_margin_end</item>
        <item name="android:layout_weight">1</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@color/for_button_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ButtonStileWithoutWeight">
        <item name="android:layout_marginEnd">@dimen/button_margin_end</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:background">@color/for_button_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="ResultScrollviewStile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/result_scrollview_height</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="TableLayoutStileForCalcButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TableRowStileForCalcButtons">
        <item name="android:layout_margin">@dimen/table_row_layout_margin</item>
    </style>

    <style name="MainLayoutStile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/white_paper_texture_background_blank_mockup_pen
        </item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutForHorizontalOrientationStile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:layout_height">@dimen/settings_button_height</item>
        <item name="android:layout_width">@dimen/settings_button_width</item>
        <item name="android:contentDescription">TODO</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>


</resources>